@{
    ViewBag.Title = "需求量更多";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script src="~/Content/js/Highcharts-8.0.0/highcharts.js"></script>

<div style="margin-top: 10px;">
    <div style="margin-left:20px;margin-bottom:20px;">
        <input name="RebarType" type="radio" value="BuildingSteel" checked />建筑钢筋
        <input name="RebarType" type="radio" value="SectionSteel" style="margin-left:10px;" />型钢
    </div>
    <div id="container"></div>
</div>
<script type="text/javascript">
    var request = {};
    request.DayMonth = $.request("DayMonth");
    request.SiteCode = $.request("SiteCode");
    request.ProcessFactoryCode = $.request("ProcessFactoryCode");
    request.Type = $.request("Type");
    request.SteelsType = "BuildingSteel";
    $(function () {
        $('input[type=radio][name=RebarType]').change(function () {
            request.SteelsType = this.value;
            GetOrderMore();
        });
        GetOrderMore();
    });

    function GetOrderMore() {
        $.ajax({
            url: "@Url.Action("GetSupplyrMore", "Home")",
            data: request,
            dataType: "json",
            success: function (data) {
                CreatChar(data);
            }
        });
    }

    function CreatChar(dataList) {
        var namestr = "需求量曲线";
        var dataList3 = dataList.Item1;
        if (request.Type == "1") {
            namestr = "供应量曲线";
            dataList3 = dataList.Item2;
        }
        var chart = Highcharts.chart("container", {
            chart: {
                //type: 'column'
            },
            title: null,
            tooltip: {
                pointFormat: '{series.name}:{point.y}kg'
            },
            plotOptions: {
                series: {
                    dataLabels: {
                        align: 'left',
                        enabled: true,
                        format: '{y} kg'
                    }
                }
            },
            credits: {
                enabled: false // 禁用版权信息GQSHOW
            },
            xAxis: {
                type: 'category',
                categories: [
                '1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'
                ],
            },
            yAxis: {
                min: 0,
                labels: {
                    format: '{value}kg',
                },
                title: {
                    text: '重量 (kg)'
                }
            },
            series: [{
                type: 'column',
                name: '需求量',
                data: dataList.Item1
            }, {
                type: 'column',
                name: '供应量',
                data: dataList.Item2
            }, {
                type: 'spline',
                name: namestr,
                data: dataList3
            }
            ]
        });
    }
</script>
