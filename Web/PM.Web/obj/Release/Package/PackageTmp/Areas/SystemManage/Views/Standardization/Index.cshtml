<style>
    body {
        overflow-x: hidden;
        overflow-y: hidden;
    }
</style>
<script>
    function selectTab(v) {
        var id = v.attr('id');
        $("#" + id + "").addClass("active").siblings().removeClass("active");
        $("#" + id + "Info").show();
        $("#" + id + "Info").siblings('div').hide();
        if (id == "BZJ") {
            $("#iframeBZJ")[0].contentWindow.$.reload();
        }
    }

    function Refresh(type) {
        if(type=="BZJ"){
            $("#iframeBZJ")[0].contentWindow.$("#gridRightList").trigger("reloadGrid");
        } else {
            $("#iframeFBFX")[0].contentWindow.$("#gridRightList").trigger("reloadGrid");
        }
    }
</script>

<div class="ui-layout-center" style="height:100%">
    <ul class="nav nav-tabs">
        <li id="FBFX" onclick="selectTab($(this))" class="active"><a href="javascript:void(0);">分部分项</a></li>
        <li id="BZJ" onclick="selectTab($(this))"><a href="javascript:void(0);">标准件</a></li>
    </ul>
    <div id="FBFXInfo" style="width:100%;height:100%">
        <iframe id="iframeFBFX" frameborder="0" src="/SystemManage/Standardization/FBFXIndex" style="width:100%;height:100%;"></iframe>
    </div>
    <div id="BZJInfo" style="display: none; width: 100%; height: 100%; ">
        <iframe id="iframeBZJ" frameborder="0" src="/SystemManage/Standardization/BZJIndex" style="width:100%;height:100%"></iframe>
    </div>
</div>


