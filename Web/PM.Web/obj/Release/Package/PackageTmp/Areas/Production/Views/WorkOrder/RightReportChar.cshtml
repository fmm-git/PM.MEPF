                        } else if (data[i]["OrderStart"] == "加急订单") {
                            dataNew1.push({
                                name: data[i]["OrderStart"],
                                y: data[i]["OrderCount"],
                                w: data[i]["WeightTotal"]
                            });
                        } else if (data[i]["OrderStart"] == "变更订单") {
                            dataNew2.push({ name: data[i]["OrderStart"], y: data[i]["OrderCount"] });
                        } else {
                            dataNew2.push({ name: data[i]["OrderStart"], y: data[i]["OrderCount"] });
