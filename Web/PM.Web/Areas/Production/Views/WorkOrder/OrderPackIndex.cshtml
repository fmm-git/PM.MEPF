        $.ajax({
            url: "@Url.Action("OrderPackIndex", "WorkOrder")",
            type: 'Get',
            contentType: 'application/json;charset=utf-8',
            async: true,
            success: function (data) {
                $("#OrderPack_tab_Info").html(data);
            }
        });
    }
    $(function () {
        $("#qrcode").height(document.body.clientHeight - 115);
    });
</script>