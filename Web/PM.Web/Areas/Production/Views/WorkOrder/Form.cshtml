    }
    //选择项目清单信息
    function btn_add() {
        $.modalOpen({
            id: "ProjectList",
            title: "新增加工订单",
            url: "/Production/WorkOrder/ProjectList?OnlySiteCode=" + $("#OnlySiteCode").val(),
            width: "75%",
            height: "75%",
            callBack: function (iframeId) {
                var BackData = top.frames[iframeId].BackData();
                if (BackData.length > 0) {
                    //添加到订单明细
                    lodeList(BackData, 1);
                }
                var index = top.layer.getFrameIndex(iframeId);
                top.layer.close(index);
            }
        });
    }
