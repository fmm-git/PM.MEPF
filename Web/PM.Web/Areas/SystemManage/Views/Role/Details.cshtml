@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<link href="~/Content/css/input.css" rel="stylesheet" />
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/SystemManage/Role/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    $("#form1").find('.form-control,select,input').attr('disabled', 'disabled');
                    $("#form1").find('div.ckbox label').attr('for', '');
                }
            });
        }
    });
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">角色编码<span class="required1">*</span></th>
                    <td class="formValue">
                        <input id="RoleCode" name="RoleCode" type="text" class="form-control required" placeholder="请输入角色编码">
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">角色名称<span class="required1">*</span></th>
                    <td class="formValue">
                        <input id="RoleName" name="RoleName" type="text" class="form-control required" placeholder="请输入角色名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">备注</th>
                    <td class="formValue">
                        <textarea id="RoleDetail" name="RoleDetail" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

